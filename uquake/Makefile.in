	   $(SYS_SRC) chase.c world.c $(SRV_PR_SRC) \
	   $(UQ_NET_SRC) $(UQ_SRV_SRC) \
	   $(UQ_GENERAL_SRC) $(UQ_SWREND_SRC_PLAT)

